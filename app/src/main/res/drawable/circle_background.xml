<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/circle_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set the background color of the circle -->
    <solid android:color="#0c0d0d" /> <!-- Adjust color as needed -->

    <!-- Set the size of the circle, if desired -->
    <size
        android:width="100dp"
        android:height="100dp" />

    <!-- Optional: Add a border around the circle -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- Adjust color and width as needed -->

</shape>
